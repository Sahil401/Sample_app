
<div class="row">
  <script type="text/javascript" charset="utf-8">
    $(function(){
      var myChart = new Highcharts.Chart({
        chart: {
          renderTo: "post_chart"
        },  
        title: {
          text: "Number of tweets"
        },
        xAxis: {
          type: "datetime"
        },
        yAxis: {
          title: {
            text: "Tweets"
          }
        },
        series: [{
          pointInterval: <%= 1.day * 1000 %>,
          pointStart: <%= 5.weeks.ago.to_i * 1000%>,
          pointEnd: <%= Date.today.to_time.to_i * 1000%>,
          data: <%= (5.weeks.ago.to_date..Date.today).map { |date| @user.tweets(date) }.inspect%>
        }]
      });
    });
  </script>
  <div id="post_chart" style="width:560px; hieght:300px;">
  </div>
  </div>