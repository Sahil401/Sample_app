<% if signed_in? %>
  <div class="row">
    <div class="high_chart">
      <%= render 'users/chart' %>
    </div>
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <%if @feed_items.any?%>
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the SConnect</h1>

    <%= link_to "Sign up now!", signup_path,
                                class: "btn btn-large btn-primary" %>
    <p><%= link_to image_tag("rails.png", alt: "Rails"), root_url %></p>
  </div>
<% end %>